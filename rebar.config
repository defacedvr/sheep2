
{deps, [
    %% cowboy version 0.9.0 has cowboy_client used in tests, version 1.0.* doen't have it.
    {cowboy, ".*", {git, "git://github.com/extend/cowboy.git", {tag, "0.9.0"}}},
    {jiffy, ".*", {git, "git://github.com/davisp/jiffy.git", {tag, "0.14.5"}}},
    {msgpack, ".*", {git, "git://github.com/msgpack/msgpack-erlang.git", {tag, "0.4.0"}}}
]}.

{profiles, [
    {test, [
        {cover_enabled, true}
    ]}
]}.

{overrides, [
    {override, jiffy, [
        {plugins, [
            {pc, "1.1.0"}
        ]},
        {provider_hooks, [
            {post, [
                {compile, {pc, compile}},
                {clean, {pc, clean}}
            ]}
        ]}
    ]}
]}.
